                        android:textColor="@color/black_less"
                        android:textSize="@dimen/_7sdp" />


                    <TextView
                        android:id="@+id/tv_ma_cloai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title_so_cto"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/_9sdp"
                        tools:text="Mã chủng loạiMã chủng loạiMã chủng loạiMã chủng loại" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_a1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:text="Năm Sản xuất"
                            android:textColor="@color/black_less"
                            android:textSize="@dimen/_7sdp" />


                        <TextView
                            android:id="@+id/tv_nam_sx"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_title_so_cto"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:paddingLeft="@dimen/_2sdp"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/_9sdp"
                            tools:text="2017201720172017201720172017201720172017" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toRightOf="@+id/ll_a1"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:gravity="center_horizontal"
                            android:text="Mã đơn vị"
                            android:textColor="@color/black_less"
                            android:textSize="@dimen/_7sdp" />


                        <TextView
                            android:id="@+id/tv_ma_dvi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_title_so_cto"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:gravity="center_horizontal"
                            android:paddingLeft="@dimen/_2sdp"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/_9sdp"
                            tools:text="PD 0121PD 0121PD 0121PD 0121PD 0121PD 0121PD 0121" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

