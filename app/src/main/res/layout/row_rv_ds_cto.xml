                        tools:text="12345" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/ll_header3"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_toRightOf="@+id/tv_STT"
                android:background="@color/black_less"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_24sdp"
                android:layout_below="@id/ll_line2"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@id/tv_STT"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_ngay_nhap"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignBaseline="@+id/btn_delete"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_toLeftOf="@+id/btn_delete"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_10sdp"
                    tools:text="24/05/2017" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_2sdp"
                    android:weightSum="7">

                    <Button
                        android:id="@+id/btn_delete"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="4"
                        android:background="@drawable/xml_border_full_type2"
                        android:drawableRight="@mipmap/ic_delete"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Xóa thiết bị"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_6sdp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_ghim"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@drawable/xml_border_full_type2"
                        android:drawableRight="@mipmap/ic_ghim"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Ghim"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_6sdp"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_chon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="3"
                        android:background="@drawable/xml_border_full_type2"
                        android:drawableRight="@mipmap/ic_chon"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Chọn"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_6sdp"

                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_info_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:scrollbars="horizontal"
                        android:singleLine="true"
                        android:textColor="@color/primary_text"
                        android:visibility="gone"
                        tools:text="ABC" />


                </LinearLayout>


            </LinearLayout>

