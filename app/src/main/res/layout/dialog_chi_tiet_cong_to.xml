<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardElevation="@dimen/_5sdp"
        app:contentPadding="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp">

          <!--  <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_dialog_ghim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/xml_button_cricle"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_book"
                app:fab_size="normal"
                fab:background="@color/white"
                fab:fab_colorNormal="@color/white"
                fab:fab_size="normal" />-->


            <LinearLayout
                android:id="@+id/ll_dialog_so_cto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dialog_so_cto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/row_rv_ds_cto_text_1"
                    android:textSize="@dimen/_12sdp"
                    tools:text="SỐ CTO" />

                <TextView
                    android:id="@+id/tv_dialog_title_so_cto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số Công tơ"
                    android:textColor="@color/row_rv_ds_cto_text_2"
                    android:textSize="@dimen/_6sdp" />
            </LinearLayout>

            <View
                android:id="@+id/v_dialog_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/ll_dialog_so_cto"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/black"></View>

            <TextView
                android:id="@+id/tv_dialog_ma_cto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_dialog_view"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp"
                tools:text="Mã công tơ" />

            <TextView
                android:id="@+id/tv_dialog_title_ma_cto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dialog_ma_cto"
                android:text="Mã Công tơ"
                android:textColor="@color/row_rv_ds_cto_text_2"
                android:textSize="@dimen/_6sdp" />

            <TextView
                android:id="@+id/tv_dialog_ma_chung_loai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_dialog_title_ma_cto"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp"
                tools:text="Mã Chủng loại" />

            <TextView
                android:id="@+id/tv_dialog_title_ma_chung_loai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dialog_ma_chung_loai"
                android:text="Mã Chủng loại"
                android:textColor="@color/row_rv_ds_cto_text_2"
                android:textSize="@dimen/_6sdp" />

            <TextView
                android:id="@+id/tv_dialog_nam_sx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_dialog_title_ma_chung_loai"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp"
                tools:text="Năm sản xuất" />

            <TextView
                android:id="@+id/tv_dialog_title_nam_sx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dialog_nam_sx"
                android:text="Năm sản xuất"
                android:textColor="@color/row_rv_ds_cto_text_2"
                android:textSize="@dimen/_6sdp" />

            <TextView
                android:id="@+id/tv_dialog_dienluc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_dialog_title_nam_sx"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp"
                tools:text="Điện lực" />

            <TextView
                android:id="@+id/tv_dialog_ma_dien_luc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dialog_dienluc"
                android:text="Điện lực quản lý"
                android:textColor="@color/row_rv_ds_cto_text_2"
                android:textSize="@dimen/_6sdp" />

            <View
                android:id="@+id/v_dialog_view_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tv_dialog_ma_dien_luc"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@color/black"></View>

            <TextView
                android:id="@+id/tv_dialog_chi_so_thao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/v_dialog_view_2"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/row_rv_ds_cto_text_1"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                tools:text="CHỈ SỐ THÁO" />

            <TextView
                android:id="@+id/tv_title_chi_so_thao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dialog_chi_so_thao"
                android:text="Chỉ số tháo"
                android:textColor="@color/row_rv_ds_cto_text_2"
                android:textSize="@dimen/_6sdp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>