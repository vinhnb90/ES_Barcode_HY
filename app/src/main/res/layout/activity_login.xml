<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xml_background"
    android:gravity="center"
    tools:context="esolutions.com.barcodehungyenpc.trash.DangNhapCuActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical|center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:gravity="center_horizontal"
            android:id="@+id/iv_logo"
            android:orientation="vertical"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/ic_barcode" />

            <TextView
                android:textAllCaps="false"
                android:id="@+id/tv_title"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_logo"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:text="Barcode"
                android:textColor="@color/white"
                android:textSize="@dimen/_24sdp" />
        </LinearLayout>

        <!--<Spinner
            android:id="@+id/sp_dienLuc"
            style="?android:attr/spinnerItemStyle"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@id/iv_logo"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/xml_input"
            android:drawableLeft="@drawable/ic_account"
            android:drawablePadding="@dimen/_5sdp"
            android:lines="1"
            android:maxLines="1"
            android:scrollHorizontally="true" />
-->


        <android.support.v4.view.ViewPager
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:id="@+id/vpage_login"
            android:layout_below="@+id/iv_logo"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_100sdp">

        </android.support.v4.view.ViewPager>


        <CheckBox
            android:paddingLeft="@dimen/_5sdp"
            android:button="@drawable/xml_checkbox"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:id="@+id/cb_save_info"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lưu thông tin"
            android:layout_below="@+id/vpage_login"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content">

        </CheckBox>
        <Button
            android:id="@+id/btn_dienLuc"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_below="@+id/cb_save_info"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/xml_button"
            android:text="Đăng nhập"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />
    </RelativeLayout>

</RelativeLayout>
