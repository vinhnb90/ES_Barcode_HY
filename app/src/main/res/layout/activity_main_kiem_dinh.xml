                <ImageView
                    android:id="@+id/iv_logo_4"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/xml_button_cricle_type1"
                    android:src="@mipmap/ic_upload_black" />

                <TextView
                    android:id="@+id/tv_date_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/iv_logo_4"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textSize="@dimen/_12sdp"
                    tools:text="19/09/2017 12h30" />

                <TextView
                    android:id="@+id/tv_title_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/iv_logo_4"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_toRightOf="@+id/iv_logo_4"
                    android:text="Tải dữ liệu lên máy chủ"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_title_upload"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/accent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <Button

                        android:id="@+id/btn_upload"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@color/accent"

                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableRight="@mipmap/ic_upload_white"
                        android:padding="@dimen/_2sdp"
                        android:text="TẢI LÊN"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                    <ProgressBar
                        android:id="@+id/pbar_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:indeterminateTint="@color/white"
                        android:padding="@dimen/_2sdp"
                        android:visibility="gone" />

                </LinearLayout>
                <!-- <ProgressBar
                                        android:id="@+id/prbar_upload"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_24sdp"
                                        android:layout_alignParentRight="true"
                                        android:layout_below="@+id/tv_title_upload"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@color/accent"
                                        android:drawablePadding="@dimen/_5sdp"
                                        android:drawableRight="@mipmap/ic_upload_white"
                                        android:padding="@dimen/_2sdp"
                                        android:text="TẢI LÊN"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp" /> -->


                <TextView
                    android:id="@+id/tv_title_upload_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_count_upload"
                    android:layout_below="@+id/tv_title_upload"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/iv_logo_4"
                    android:text="Số thiết bị gửi kiểm định"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/tv_count_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title_upload"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/tv_title_upload_2"
                    android:text="0"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_ds_cto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/nav_bottom_menu"
            android:layout_below="@+id/ll_search2"
            android:background="@android:color/transparent"
            android:visibility="visible">

        </android.support.v7.widget.RecyclerView>
        <!--android:layout_above="@+id/rl_upload_data"-->

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/_72sdp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@mipmap/ic_upload_white"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

